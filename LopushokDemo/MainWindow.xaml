<Window x:Class="LopushokDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LopushokDemo"
        mc:Ignorable="d"
    Title="Lopushok"
    MinHeight="600"
    MinWidth="900"
    Width="900"
    Height="600"
    ResizeMode="NoResize"
    FontFamily=" Gabriola"
    Background="#FFFFFF"
    Icon="/Pictures/icon.ico"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="6*" />
        </Grid.RowDefinitions>
        <Frame
            Name="frame"
            NavigationUIVisibility="Hidden"
            Grid.Row="1"/>
        <Canvas
            Grid.Row="0"
            Margin="320,0,320,0">
            <StackPanel
                Orientation="Horizontal"
                >
                <Image
                    Source="/Pictures/logo.jpg" Height="80"/>
                <TextBlock
                    Text="Lopushok"
                    FontSize="50" />
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
